@model Service.BMWindows.Executes.AppItem.AppItemViewModel

<style>
    :root {
        --primary-color-form: #3b82f6;
        --border-color-form: #e2e8f0;
        --background-light: #fafbfc;
        --text-primary: #1e293b;
        --text-color-light: #666;
    }

    /* 1. Animation Keyframes (Giữ nguyên) */
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* 2. Styling cho Form và các trường */
    .app-item-form-modal {
        padding: 8px;
    }

        /* Style cho form-group */
        .app-item-form-modal .form-group {
            margin-bottom: 20px;
        }

        /* Style cho label */
        .app-item-form-modal .control-label {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            /* Style cho Icon trong label */
            .app-item-form-modal .control-label .fa-solid {
                color: var(--primary-color-form);
            }

        /* Input, Select, URL, Prioritize Styling */
        .app-item-form-modal input[type="text"],
        .app-item-form-modal input[type="url"],
        .app-item-form-modal input[type="number"],
        .app-item-form-modal select {
            border: 2px solid var(--border-color-form);
            border-radius: 8px;
            padding: 0px 14px;
            transition: all 0.2s;
            font-size: 14px;
        }

    /* 3. Icon Upload Section */
    .icon-upload-wrapper {
        gap: 16px;
        flex-direction: column;
    }

    .icon-preview-box {
        width: 120px;
        height: 120px;
        border: 2px solid var(--border-color-form);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background: var(--background-light);
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .icon-preview-img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    /* File Input */
    .icon-file-input {
        border: 2px dashed var(--border-color-form);
        border-radius: 8px;
        padding: 10px;
        background: var(--background-light);
        cursor: pointer;
        font-size: 13px;
        transition: all 0.2s;
    }

    /* Upload Status */
    #iconUploadStatus {
        font-size: 12px;
        color: var(--primary-color-form);
        display: none;
        padding: 6px 12px;
        background: #eff6ff;
        border-radius: 6px;
        margin-top: 8px;
    }

    /* Icon URL Display */
    #iconUrlDisplay {
        font-size: 11px;
        color: #64748b;
        background: #f8fafc;
        border: 1px solid var(--border-color-form);
        border-radius: 6px;
        margin-top: 8px;
        word-break: break-all;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        #iconUrlDisplay i {
            color: var(--primary-color-form);
            font-size: 12px;
        }

        #iconUrlDisplay .url-text {
            flex: 1;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    .app-item-form-modal .input-group.mb-2 .btn,
    #AppItemForm .modal-body .input-group.mb-2 .btn {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 14px; /* adjust as needed */
        font-weight: 600; /* adjust as needed */
        letter-spacing: 0.2px;
    }

    /* Ensure the text input and the button in the input-group have identical heights and alignment */
    .app-item-form-modal .input-group.mb-2,
    .app-item-form-modal .input-group.mb-2 .form-control,
    .app-item-form-modal .input-group.mb-2 .input-group-append,
    .app-item-form-modal .input-group.mb-2 .btn {
        box-sizing: border-box;
        display: flex;
        align-items: center;
    }

        /* Set a fixed height that matches the visual tone of other controls (includes 2px borders) */
        .app-item-form-modal .input-group.mb-2 .form-control,
        .app-item-form-modal .input-group.mb-2 .btn {
            height: 44px; /* adjust if you want larger/smaller */
            line-height: 1;
        }

        /* Make the input look continuous with the button (no double border) */
        .app-item-form-modal .input-group.mb-2 .form-control {
            padding: 0 14px;
            border-right: 0;
            border-radius: 8px 0 0 8px;
        }

        .app-item-form-modal .input-group.mb-2 .input-group-append {
            height: 44px;
        }

        .app-item-form-modal .input-group.mb-2 .btn {
            padding: 0 16px;
            border-radius: 0 8px 8px 0;
            height: 44px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        /* Ensure the append wrapper doesn't collapse on older bootstrap */
        .app-item-form-modal .input-group.mb-2 .input-group-append .btn {
            height: 100%;
        }

</style>

<form novalidate class="app-item-form-modal">

    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group" style="animation: slideIn 0.3s ease;">
        <label class="control-label">
            <i class="fa-solid fa-cube"></i>
            Tên ứng dụng <span class="text-danger">*</span>
        </label>
        <input type="text"
               name="Name"
               value="@Model.Name"
               class="form-control"  
               placeholder="Nhập tên ứng dụng"
               maxlength="200"
               data-validation="required" />
    </div>

    <div class="form-group" style="animation: slideIn 0.4s ease;">
        <label class="control-label">
            <i class="fa-solid fa-layer-group"></i>
            Nhóm ứng dụng <span class="text-danger">*</span>
        </label>
        <select name="CategoryId" class="form-control" data-validation="required">
            <option value="">-- Chọn nhóm --</option>
            @if (ViewBag.Categories != null)
            {
                @foreach (var cat in ViewBag.Categories as IEnumerable<Service.BMWindows.Executes.Category.CategoryViewModel>)
                {
                    @if (Model.CategoryId == cat.Id)
                    {
                        <option value="@cat.Id" selected="selected">@cat.Name</option>
                    }
                    else
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                }
            }
        </select>
    </div>

    <div class="form-group" style="animation: slideIn 0.5s ease;">
        <label class="control-label">
            <i class="fa-solid fa-link"></i>
            URL
        </label>
        <input type="url"  
               name="Url"
               value="@Model.Url"  
               class="form-control"
               placeholder="https://example.com"
               maxlength="500" />
    </div>

    <div class="form-group" style="animation: slideIn 0.6s ease;">
        <label class="control-label">
            <i class="fa-solid fa-image"></i>
            Icon
        </label>

        <div class="row align-items-start mb-2 icon-upload-wrapper" style="padding: 0 15px;">
            <div class="col-auto" style="padding-bottom: 15px;">
                <div class="icon-preview-box">
                    <img id="iconPreview" src="@(string.IsNullOrEmpty(Model.Icon) ? Url.Content("~/images/icons/settings.png") : Model.Icon)" alt="Icon preview" class="icon-preview-img" />
                </div>
            </div>

            <div class="col">
                <input type="hidden" name="Icon" id="Icon" value="@Model.Icon" />

                <div class="input-group mb-2">
                    <input type="text" id="iconFileName" class="form-control" placeholder="Chưa có tệp được chọn" readonly />
                    <div class="input-group-append">
                        <button class="btn btn-outline-primary" style="border: 1px solid #ddd;" type="button" onclick="document.getElementById('IconFile').click();">
                            <i class="fa-solid fa-upload"></i>&nbsp;Chọn ảnh
                        </button>
                    </div>
                </div>

                <!-- actual file input (kept for existing JS) -->
                <input type="file" id="IconFile" accept="image/*" class="d-none" onchange="(function(e){ var f = e.target.files && e.target.files[0]; if(f){ var n = document.getElementById('iconFileName'); if(n) n.value = f.name; } })(event)" />

                <div id="iconUploadStatus" class="mt-2" style="display:none;">
                    <i class="fa-solid fa-spinner fa-spin"></i> Đang tải lên...
                </div>

            </div>
        </div>
    </div>



    <div class="form-group" style="animation: slideIn 0.8s ease;">
        <label class="control-label">
            <i class="fa-solid fa-arrow-up-1-9"></i>
            Thứ tự ưu tiên
        </label>
        <input type="number"  
               name="Prioritize"
               value="@Model.Prioritize"  
               class="form-control"
               placeholder="Nhập số thứ tự ưu tiên"
               min="1"
               step="1" />
    </div>

    <div class="form-group" style="animation: slideIn 0.9s ease;">
        <label class="control-label">
            <i class="fa-solid fa-toggle-on"></i>
            Trạng thái
        </label>
        <select name="Status" class="form-control">
            @if (Model.Status == 0)
            {
                <option value="0" selected="selected">⚫ Dừng</option>
            }
            else
            {
                <option value="0">⚫ Dừng</option>
            }

            @if (Model.Status == 1)
            {
                <option value="1" selected="selected">✅ Hoạt động</option>
            }
            else
            {
                <option value="1">✅ Hoạt động</option>
            }

        </select>
    </div>

</form>

<script src="~/js/web/admin/appitem.icon.upload.js"></script>