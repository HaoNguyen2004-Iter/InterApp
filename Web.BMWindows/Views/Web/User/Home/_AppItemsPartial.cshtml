@model List<Service.BMWindows.Executes.AppItem.AppItemViewModel>

@if (Model != null && Model.Any())
{
<div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-4 text-center">
    @foreach (var item in Model)
    {
    <div class="col app-item">
        <div class="app-icon-box">
        @if (!string.IsNullOrEmpty(item.Url))
        {
            <a href="@item.Url" target="_blank">
            @if (!string.IsNullOrEmpty(item.Icon) && item.Icon.Contains("fa-"))
            {
                <i class="@item.Icon" style="font-size: 50px; color: #667eea;"></i>
            }
            else if (!string.IsNullOrEmpty(item.Icon))
            {
                <img src="@item.Icon" alt="@item.Name">
            }
            else
            {
                <img src="~/images/icons/settings.png" alt="@item.Name">
            }
            </a>
        }
        else
        {
            @if (!string.IsNullOrEmpty(item.Icon) && item.Icon.Contains("fa-"))
            {
                <i class="@item.Icon" style="font-size: 50px; color: #667eea;"></i>
            }
            else if (!string.IsNullOrEmpty(item.Icon))
            {
                <img src="@item.Icon" alt="@item.Name">
            }
            else
            {
                <img src="~/images/icons/settings.png" alt="@item.Name">
            }
        }
        </div>
        <p class="app-label">@item.Name</p>
    </div>
    }
</div>
}
else
{
<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="alert alert-info text-center" role="alert" style="max-width: 500px; padding: 30px;">
        <i class="fa-solid fa-info-circle" style="font-size: 48px; margin-bottom: 15px; display: block;"></i>
        <h5 class="mb-0">Chưa có ứng dụng được kích hoạt</h5>
    </div>
</div>
}
