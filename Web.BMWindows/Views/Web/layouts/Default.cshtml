<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Admin BMWindow - Dashboard</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
	<link rel="stylesheet" href="~/css/admin.css">

	@* Optional: jQuery Uniform CSS *@
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.uniform/2.1.2/css/uniform.default.min.css" />

	@* Select2 CSS - required for advance-grid filters *@
	<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>

	<!-- Wrapper chính -->
	<div class="wrapper">
		<!-- Sidebar Navigation -->
		<nav class="sidebar" id="sidebar">
			<div class="sidebar-header">
				<div class="logo-wrapper">
					<i class="fa-solid fa-cubes-stacked"></i>
					<span class="logo-text">BMWindow</span>
				</div>
				<button class="sidebar-toggle" id="sidebarToggle">
					<i class="fa-solid fa-bars"></i>
				</button>
			</div>

			<ul class="nav flex-column sidebar-nav">
				<!-- Dashboard -->
				<li class="nav-item">
					<a class="nav-link active" href="#" data-target="dashboard">
						<i class="nav-icon fa-solid fa-gauge-high"></i>
						<span class="nav-text">Dashboard</span>
					</a>
				</li>

				<!-- Ứng dụng -->
				<li class="nav-item">
					<a class="nav-link has-submenu" data-bs-toggle="collapse" href="#menu-ungdung" role="button">
						<i class="nav-icon fa-solid fa-shapes"></i>
						<span class="nav-text">Ứng dụng</span>
						<i class="nav-arrow fa-solid fa-chevron-down"></i>
					</a>
					<div class="collapse submenu" id="menu-ungdung">
						<ul class="nav flex-column">
							<li class="nav-item">
								<a href="#" class="nav-link" data-target="category-management">
									<span class="submenu-dot"></span>
									Nhóm ứng dụng
								</a>
							</li>
							<li class="nav-item">
								<a href="#" class="nav-link" data-target="app-management">
									<span class="submenu-dot"></span>
									Danh sách ứng dụng
								</a>
							</li>
						</ul>
					</div>
				</li>

				<!-- Chức năng -->
				<li class="nav-item">
					<a class="nav-link has-submenu" data-bs-toggle="collapse" href="#menu-chucnang" role="button">
						<i class="nav-icon fa-solid fa-bolt"></i>
						<span class="nav-text">Chức năng</span>
						<i class="nav-arrow fa-solid fa-chevron-down"></i>
					</a>
					<div class="collapse submenu" id="menu-chucnang">
						<ul class="nav flex-column">
							<li class="nav-item">
								<a href="#" class="nav-link" data-target="feature-1">
									<span class="submenu-dot"></span>
									Tính năng 1
								</a>
							</li>
							<li class="nav-item">
								<a href="#" class="nav-link" data-target="feature-2">
									<span class="submenu-dot"></span>
									Tính năng 2
								</a>
							</li>
						</ul>
					</div>
				</li>

				<!-- Người dùng -->
				<li class="nav-item">
					<a class="nav-link" href="#" data-target="user-management">
						<i class="nav-icon fa-solid fa-users"></i>
						<span class="nav-text">Người dùng</span>
					</a>
				</li>

				<!-- Cài đặt -->
				<li class="nav-item">
					<a class="nav-link" href="#" data-target="settings">
						<i class="nav-icon fa-solid fa-gear"></i>
						<span class="nav-text">Cài đặt</span>
					</a>
				</li>
			</ul>

			<!-- User Info ở dưới sidebar -->
			<div class="sidebar-footer">
				<div class="user-info">
					<div class="user-avatar">
						<i class="fa-solid fa-user"></i>
					</div>
					<div class="user-details">
						<div class="user-name">Administrator</div>
						<div class="user-role"> Admin</div>
					</div>
				</div>
			</div>
		</nav>

		<!-- Main Content Area -->
		<div class="main-content" id="mainContent">
			@RenderBody()
		</div>
	</div>

	<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

	@* jQuery UI (draggable used by advance-grid) *@
	<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/test/app.components.js"></script>

	@* Uniform plugin (used by advance-grid) *@
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.uniform/2.1.2/jquery.uniform.min.js"></script>

	@* Select2 plugin (used by advance-grid filters) *@
	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

	<script>
		(function () {
			if (typeof jQuery === 'undefined') return;
			if (!jQuery.fn) return;
			if (typeof jQuery.fn.uniform !== 'function') {
				jQuery.fn.uniform = function () { return this; };
			}
			if (typeof jQuery.fn.select2 !== 'function') {
				jQuery.fn.select2 = function (opts) { return this; };
			}
		})();
	</script>

	<script src="~/js/script.js"></script>

	@RenderSection("Scripts", required: false)
</body>
</html>