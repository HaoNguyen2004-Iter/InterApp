@using BMWindows;
@using Service.Utility.Components

<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Admin BMWindow - Dashboard</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
	<script src="~/release/web-2.0/web-2.0.js"></script>
	@BundleHelper.Generate(new List<BundleType>()
	{
		BundleType.Web2,
		})
	<!-- ===== CSS Styles ===== -->
	<link href="~/release/daterangepicker/daterangepicker.css" rel="stylesheet" />
	<link href="~/shared/fonts/roboto/styles.css" rel="stylesheet" />
	<link href="~/css/web.min.css" rel="stylesheet" />
	<link href="~/css/custom-header.css" rel="stylesheet" />
	<link href="~/release/web-2.0/web-2.0.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/admin.css">
</head>
<body>

	<!-- Wrapper chính -->
	<div class="wrapper">
		<!-- Sidebar Navigation -->
		<nav class="sidebar" id="sidebar">
			<div class="sidebar-header">
				<div class="logo-wrapper">
					<i class="fa-solid fa-cubes-stacked"></i>
					<span class="logo-text">BMWindow</span>
				</div>
				<button class="sidebar-toggle" id="sidebarToggle">
					<i class="fa-solid fa-bars"></i>
				</button>
			</div>

			<ul class="nav flex-column sidebar-nav">
				<!-- Dashboard -->
				<li class="nav-item">
					<a class="nav-link active" href="#" data-target="dashboard">
						<i class="nav-icon fa-solid fa-gauge-high"></i>
						<span class="nav-text">Dashboard</span>
					</a>
				</li>

				<!-- Ứng dụng -->
				<li class="nav-item">
					<a class="nav-link has-submenu" data-bs-toggle="collapse" href="#menu-ungdung" role="button">
						<i class="nav-icon fa-solid fa-shapes"></i>
						<span class="nav-text">Ứng dụng</span>
						<i class="nav-arrow fa-solid fa-chevron-down"></i>
					</a>
					<div class="collapse submenu" id="menu-ungdung">
						<ul class="nav flex-column">
							<li class="nav-item">
								<a href="#" class="nav-link" data-target="category-management">
									<span class="submenu-dot"></span>
									Nhóm ứng dụng
								</a>
							</li>
							<li class="nav-item">
								<a href="#" class="nav-link" data-target="app-management">
									<span class="submenu-dot"></span>
									Danh sách ứng dụng
								</a>
							</li>
						</ul>
					</div>
				</li>

				<!-- Chức năng -->
				<li class="nav-item">
					<a class="nav-link has-submenu" data-bs-toggle="collapse" href="#menu-chucnang" role="button">
						<i class="nav-icon fa-solid fa-bolt"></i>
						<span class="nav-text">Chức năng</span>
						<i class="nav-arrow fa-solid fa-chevron-down"></i>
					</a>
					<div class="collapse submenu" id="menu-chucnang">
						<ul class="nav flex-column">
							<li class="nav-item">
								<a href="#" class="nav-link" data-target="feature-1">
									<span class="submenu-dot"></span>
									Tính năng 1
								</a>
							</li>
							<li class="nav-item">
								<a href="#" class="nav-link" data-target="feature-2">
									<span class="submenu-dot"></span>
									Tính năng 2
								</a>
							</li>
						</ul>
					</div>
				</li>

				<!-- Người dùng -->
				<li class="nav-item">
					<a class="nav-link" href="#" data-target="user-management">
						<i class="nav-icon fa-solid fa-users"></i>
						<span class="nav-text">Người dùng</span>
					</a>
				</li>

				<!-- Cài đặt -->
				<li class="nav-item">
					<a class="nav-link" href="#" data-target="settings">
						<i class="nav-icon fa-solid fa-gear"></i>
						<span class="nav-text">Cài đặt</span>
					</a>
				</li>
			</ul>

			<!-- User Info ở dưới sidebar -->
			<div class="sidebar-footer">
				<div class="user-info">
					<div class="user-avatar">
						<i class="fa-solid fa-user"></i>
					</div>
					<div class="user-details">
						<div class="user-name">Administrator</div>
						<div class="user-role"> Admin</div>
					</div>
				</div>
			</div>
		</nav>

		<!-- Main Content Area -->
		<div class="main-content" id="mainContent">
			@RenderBody()
		</div>
	</div>

	@* <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> *@

	<script src="~/js/script.js"></script>

	@RenderSection("Scripts", required: false)
</body>
</html>